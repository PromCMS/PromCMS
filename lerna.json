{
  "packages": [
    "packages/*"
  ],
  "command": {
    "publish": {
      "ignoreChanges": [
        "*.md",
        "story.tsx",
        "*.story.tsx",
        "*.test.ts",
        "*.test.tsx",
        "*.snap",
        "*.d.ts",
        ".npmrc"
      ]
    },
    "version": {
      "conventionalCommits": true,
      "yes": true,
      "ignoreChanges": ["**/*.md"],
      "message": "chore(release): publish"
    } 
  },
  "useWorkspaces": true,
  "npmClient": "yarn",
  "version": "independent"
}
