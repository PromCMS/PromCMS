{
  "extends": "../../default.tsconfig.json",
  "compilerOptions": {
    "target": "ESNEXT",
    "module": "ESNEXT",
    "rootDir": "src",
    "baseUrl": "./src",
    "paths": {
      "@styles/*": ["./styles/*"],
      "@custom-types": ["./types"],
      "@pages/*": ["./pages/*"],
      "@config": ["./config"],
      "@utils": ["./utils"],
      "@api": ["./api"],
      "@components/*": ["./components/*"],
      "@contexts/*": ["./contexts/*"],
      "@services": ["./services"],
      "@schemas": ["./schemas"],
      "@constants": ["./constants"],
      "@events": ["./events"],
      "@hooks/*": ["./hooks/*"],
      "@logger": ["./logger"],
      "@layouts": ["./layouts"]
    },
    "jsx": "preserve"
  },
  "include": ["src"],
  "exclude": ["node_modules"],
}
