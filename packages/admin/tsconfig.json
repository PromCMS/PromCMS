{
  "extends": "@prom-cms/config/tsconfig.default.json",
  "compilerOptions": {
    "target": "ESNEXT",
    "module": "ESNEXT",
    "rootDir": "src",
    "baseUrl": "./src",
    "paths": {
      "@styles/*": ["./styles/*"],
      "@custom-types": ["./types"],
      "@pages/*": ["./pages/*"],
      "@config": ["./config"],
      "@utils": ["./utils"],
      "@api": ["./misc/api"],
      "@components/*": ["./components/*"],
      "@contexts/*": ["./misc/contexts/*"],
      "@services": ["./misc/services"],
      "@schemas": ["./misc/schemas"],
      "@constants": ["./misc/constants"],
      "@events": ["./misc/events"],
      "@hooks/*": ["./misc/hooks/*"],
      "@layouts": ["./layouts"]
    },
    "jsx": "preserve",
  },
  "include": [
    "next-env.d.ts",
    "src",
  ],
  "exclude": ["node_modules"]
}
