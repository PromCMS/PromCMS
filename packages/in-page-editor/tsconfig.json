{
  "extends": "@prom-cms/config/tsconfig.default.json",
  "compilerOptions": {
    "rootDir": "src",
    "outDir": "dist",
    "baseUrl": "src",
    "noEmit": false,
    "target": "ESNEXT",
    "module": "esnext",
    "isolatedModules": false,
    "jsx": "preserve"
  },
  "include": ["src", "dev"],
  "exclude": ["node_modules", "dist"]
}
