{
  "name": "@prom-cms/shared",
  "description": "Shared package for prom cms packages",
  "version": "1.7.0",
  "type": "module",
  "author": "Ond≈ôej Langr <hi@ondrejlangr.cz>",
  "license": "MIT",
  "homepage": "https://github.com/PromCMS/PromCMS/blob/main/packages/shared/README.md",
  "main": "dist/index.cjs",
  "types": "dist/index.d.ts",
  "module": "dist/index.js",
  "exports": {
    "./*": "./*",
    "./package.json": "./package.json",
    ".": {
      "import": "./dist/index.js",
      "require": "./dist/index.cjs",
      "types": "./dist/index.d.ts"
    },
    "./generator": {
      "import": "./dist/generator/index.js",
      "require": "./dist/generator/index.cjs",
      "types": "./dist/generator/index.d.ts"
    },
    "./internal": {
      "import": "./dist/internal/index.js",
      "require": "./dist/internal/index.cjs",
      "types": "./dist/internal/index.d.ts"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "prettier": "prettier --write \"**/*.{ts,tsx}\"",
    "test": "vitest",
    "test:coverage": "vitest run --coverage",
    "clean": "rimraf dist",
    "prebuild": "npm run clean",
    "build": "tsup"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/PromCMS/PromCMS.git",
    "directory": "packages/shared"
  },
  "bugs": {
    "url": "https://github.com/PromCMS/PromCMS/issues"
  },
  "dependencies": {
    "lodash.kebabcase": "^4.1.1",
    "zod": "^3.19.1"
  },
  "devDependencies": {
    "@types/find-config": "1.0.1",
    "vitest": "^0.24.3",
    "typescript": "4.8.2",
    "find-config": "1.0.0",
    "tabler-icons-react": "^1.52.0",
    "@types/lodash.kebabcase": "^4.1.7",
    "chalk": "5.0.0",
    "dotenv": "10.0.0",
    "@prom-cms/config": "*"
  },
  "peerDependencies": {
    "find-config": "1.0.0",
    "tabler-icons-react": "^1.52.0",
    "chalk": "5.0.0",
    "dotenv": "10.0.0"
  }
}
