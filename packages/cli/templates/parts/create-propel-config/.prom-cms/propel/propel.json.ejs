{
    "propel": {
        "paths": {
            "schemaDir": ".\/.prom-cms\/propel",
            "phpDir": ".\/modules\/<%- projectNameAsFolderName %>\/Models",
            "phpConfDir": ".\/.prom-cms\/propel\/config",
            "migrationDir": ".\/.prom-cms\/propel\/migrations",
            "sqlDir": ".\/.prom-cms\/propel\/sql"        
        },
        "generator": {
            "namespaceAutoPackage": false
        },
        "database": {
            "connections": {
                <% config.database.connections.forEach((connection, index, items) => { %>
                    "<%- connection.name %>": {
                        "adapter": <%- JSON.stringify(connection.adapter) %>,
                        "dsn": <%- JSON.stringify(connection.dsn) %>,
                        "user": <%- JSON.stringify(connection.user) %>,
                        "password": <%- JSON.stringify(connection.password) %>,
                        "settings": {
                            "charset": "utf8"
                        }
                    }<% if (index !== items.length-1) { %>,<% } %>
                <% }) %>
            }
        }
    }
}