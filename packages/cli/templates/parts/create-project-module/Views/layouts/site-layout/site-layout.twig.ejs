<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport"
      content="width=device-width, initial-scale=1, shrink-to-fit=no" />

    {# Info #}
    <title>
      {{ block('title') }} - <%= project.name %>
    </title>

    {# SEO #}
    <meta name="description" content="<%= project.name %>" />

    {# Assets #}
    {{
      getViteAssets({
        distFolderPath: 'dist',
        assets: [
          {
            path: 'index.ts',
            type: 'script'
          }
        ]
      })|raw
    }}
  </head>
  <body>
    {% include '@modules:<%= views.prefix %>/layouts/site-layout/header.twig' %}
    <main>
      {{ block('content') }}
    </main>
    {% include '@modules:<%= views.prefix %>/layouts/site-layout/footer.twig' %}
  </body>
</html>
