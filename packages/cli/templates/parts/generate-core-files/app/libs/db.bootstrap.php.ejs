<?php

use App\Database\Model;
use DI\Container;

return function (Container $container) {
  $databaseConfig = $container->get('config')['db'];

  Model::setStoreConfig(
    $databaseConfig['root'],
    $databaseConfig['storeConfig'],
  );

  Model::$defaultLanguage = $container->get('config')['i18n']['default'];
};
