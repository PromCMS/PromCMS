{
  "extends": "@prom-cms/config/tsconfig.default.json",
  "compilerOptions": {
    "rootDir": "src",
    "baseUrl": "./src",
    "outDir": "dist",
    "noEmit": false,
    "target": "ESNEXT",
    "module": "esnext",
    "paths": {
      "@utils": ["./utils"],
      "@commands-parts/*": ["./parts/*"],
    }
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules", 
    "dist"
  ],
}
