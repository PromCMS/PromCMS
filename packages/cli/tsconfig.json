{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "baseUrl": "./",
    "isolatedModules": true,
    "esModuleInterop": false,
    "allowSyntheticDefaultImports": true,
    "target": "ESNEXT" ,
    "module": "esnext",
    "moduleResolution": "Node",
    "paths": {
      "@prom/shared": ["../shared/src"],
      "@prom/shared/*":[ "../shared/src/*"],
    }
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx"],
  "exclude": ["node_modules"]
}
