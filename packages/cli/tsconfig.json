{
  "extends": "@prom-cms/config/default.tsconfig.json",
  "compilerOptions": {
    "rootDir": "src",
    "baseUrl": "./src",
    "outDir": "dist",
    "noEmit": false,
    "target": "ESNEXT",
    "module": "esnext",
    "esModuleInterop": true,
    "experimentalDecorators": true
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules", 
    "dist"
  ]
}