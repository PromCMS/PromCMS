{
  "name": "@prom-cms/cli",
  "description": "PromCMS cli package",
  "version": "0.16.0",
  "type": "module",
  "author": "Ond≈ôej Langr <hi@ondrejlangr.cz>",
  "homepage": "https://github.com/PromCMS/PromCMS/blob/main/packages/clie/README.md",
  "license": "MIT",
  "main": "dist/index.cjs",
  "typings": "dist/index.d.ts",
  "module": "dist/index.js",
  "source": "src/index.ts",
  "files": [
    "dist",
    "templates",
    ".prettierrc.cjs",
    "scripts"
  ],
  "bin": {
    "prom-cli": "./bin/cli.cjs"
  },
  "scripts": {
    "starter-commands": "node --loader=ts-node/esm --loader ./loader.mjs --experimental-specifier-resolution=node src/index.ts",
    "generate:dev": "npm run starter-commands -- generate:develop",
    "generate:cms": "npm run starter-commands -- generate-cms",
    "regenerate:cms": "npm run starter-commands -- generate-cms --regenerate",
    "db-tools:migrate": "npm run starter-commands -- db-tools:migrate",
    "seed-database": "npm run starter-commands -- seed-database",
    "test:coverage": "vitest run --coverage",
    "clean": "rimraf dist",
    "prebuild": "npm run clean",
    "build": "tsup",
    "prettier": "prettier --write \"**/*.{ts,tsx}\"",
    "test": "vitest"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/PromCMS/PromCMS.git",
    "directory": "packages/cli"
  },
  "bugs": {
    "url": "https://github.com/PromCMS/PromCMS/issues"
  },
  "dependencies": {
    "@prom-cms/admin": "^0.4.0",
    "@boost/cli": "^4.0.0",
    "@faker-js/faker": "^7.6.0",
    "@prom-cms/shared": "^1.9.3",
    "@prom-cms/config": "^0.1.2",
    "chalk": "^5.1.2",
    "dayjs": "^1.11.6",
    "dotenv-cli": "^5.1.0",
    "dotenv": "^10.0.0",
    "ejs": "^3.1.8",
    "enquirer": "^2.3.6",
    "execa": "^6.1.0",
    "fs-extra": "^10.1.0",
    "ink": "^3.2.0",
    "react-reconciler": "^0.29.0",
    "ts-node": "^10.9.1",
    "prettier": "2.7.1",
    "typescript": "^4.9.4",
    "rimraf": "^3.0.2",
    "react": "^18.2.0"
  },
  "devDependencies": {
    "@types/ejs": "^3.1.1",
    "@types/fs-extra": "9.0.13",
    "@types/prettier": "^2.7.1",
    "@types/react": "^18.0.24",
    "@types/rimraf": "^3.0.2",
    "ink-testing-library": "^2.1.0",
    "tsconfig-paths": "3.12.0",
    "vitest": "^0.24.3"
  }
}
