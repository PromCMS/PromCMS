{
  "name": "@prom-cms/cli",
  "description": "PromCMS cli package",
  "version": "0.19.3",
  "type": "module",
  "author": "Ond≈ôej Langr <hi@ondrejlangr.cz>",
  "homepage": "https://github.com/PromCMS/PromCMS/blob/main/packages/clie/README.md",
  "license": "MIT",
  "main": "dist/index.js",
  "typings": "dist/index.d.ts",
  "module": "dist/index.js",
  "source": "src/index.ts",
  "files": [
    "dist",
    "templates",
    ".prettierrc.cjs",
    "scripts"
  ],
  "bin": {
    "prom-cli": "./bin/cli.js"
  },
  "scripts": {
    "prestart": "npm run build",
    "start": "node ./bin/cli.js",
    "project:create": "npm run start -- project create -n \"Prom Test Project\" -cl -pd -a false -p npm -c ../../node_modules/.prom-cms/php-app",
    "project:update": "npm run start -- project update -a false --cwd ../../node_modules/.prom-cms/php-app",
    "test:coverage": "vitest run --coverage",
    "clean": "rimraf dist",
    "prebuild": "npm run clean",
    "build": "npm run build:package && npm run build:types && npm run build:types:aliases",
    "build:package": "swc ./src -d dist",
    "build:types": "tsc",
    "build:types:aliases": "tsc-alias",
    "prettier": "prettier --write \"**/*.{ts,tsx}\"",
    "test": "vitest"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/PromCMS/PromCMS.git",
    "directory": "packages/cli"
  },
  "bugs": {
    "url": "https://github.com/PromCMS/PromCMS/issues"
  },
  "dependencies": {
    "@faker-js/faker": "^7.6.0",
    "@prom-cms/admin": "^0.12.0",
    "@prom-cms/config": "^0.1.2",
    "@prom-cms/shared": "^1.9.4",
    "chalk": "^5.1.2",
    "commander": "^11.0.0",
    "dayjs": "^1.11.6",
    "dotenv": "^10.0.0",
    "ejs": "^3.1.8",
    "enquirer": "^2.3.6",
    "execa": "^6.1.0",
    "find-config": "^1.0.0",
    "fs-extra": "^10.1.0",
    "inquirer": "^8.2.6",
    "log-update": "^5.0.1",
    "prettier": "2.7.1",
    "rimraf": "^3.0.2",
    "slugify": "^1.6.6",
    "ts-node": "^10.9.1",
    "typescript": "^4.9.4",
    "zod": "^3.20.2"
  },
  "devDependencies": {
    "@swc/core": "^1.3.41",
    "@types/ejs": "^3.1.1",
    "@types/find-config": "^1.0.1",
    "@types/fs-extra": "9.0.13",
    "@types/inquirer": "^9.0.3",
    "@types/prettier": "^2.7.1",
    "@types/rimraf": "^3.0.2",
    "tsc-alias": "^1.8.3",
    "tsconfig-paths": "3.12.0",
    "vitest": "^0.24.3"
  }
}
