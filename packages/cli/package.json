{
  "name": "@prom-cms/cli",
  "description": "PromCMS cli package",
  "version": "0.22.2",
  "type": "module",
  "author": "Ond≈ôej Langr <hi@ondrejlangr.cz>",
  "homepage": "https://github.com/PromCMS/PromCMS/blob/main/packages/clie/README.md",
  "license": "MIT",
  "main": "dist/index.js",
  "typings": "dist/index.d.ts",
  "module": "dist/index.js",
  "source": "src/index.ts",
  "files": [
    "dist",
    "templates",
    ".prettierrc.cjs",
    "scripts"
  ],
  "bin": {
    "prom-cli": "./bin/cli.js"
  },
  "scripts": {
    "prestart": "pnpm run build",
    "start": "node ./bin/cli.js",
    "project:create": "pnpm run start project create --prom-develop -cl -p pnpm -n \"Prom Test Project\" --no-admin --cwd ./.dev",
    "project:update": "pnpm run start project update --no-admin --cwd ./.dev",
    "clean": "rm -rf dist",
    "prebuild": "pnpm run clean",
    "build": "pnpm run build:package && pnpm run build:types && pnpm run build:types:aliases",
    "build:package": "swc ./src -d dist",
    "build:types": "tsc",
    "build:types:aliases": "tsc-alias",
    "prettier": "prettier --config \"../../prettier.config.js\" --ignore-path \"../../.prettierignore\" --write \"**/*.{ts,tsx}\" ",
    "test": "vitest",
    "test:dev": "vitest --update",
    "test:coverage": "vitest run --coverage"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/PromCMS/PromCMS.git",
    "directory": "packages/cli"
  },
  "bugs": {
    "url": "https://github.com/PromCMS/PromCMS/issues"
  },
  "dependencies": {
    "@faker-js/faker": "^7.6.0",
    "@prom-cms/prettier-config": "^0.1.1",
    "@prom-cms/schema": "^0.6.0",
    "chalk": "^5.1.2",
    "lodash": "^4.17.21",
    "glob": "^10.3.10",
    "commander": "^11.0.0",
    "dayjs": "^1.11.6",
    "dotenv": "^10.0.0",
    "ejs": "^3.1.8",
    "execa": "^8.0.1",
    "find-config": "^1.0.0",
    "fs-extra": "^10.1.0",
    "inquirer": "^8.2.6",
    "log-update": "^5.0.1",
    "prettier": "^3.0.3",
    "slugify": "^1.6.6",
    "ts-node": "^10.9.1",
    "typescript": "^5.3.3",
    "zod": "^3.20.2"
  },
  "devDependencies": {
    "@prom-cms/admin": "^0.18.0",
    "@swc/core": "^1.3.41",
    "@types/ejs": "^3.1.1",
    "@types/lodash": "^4.14.202",
    "@types/find-config": "^1.0.1",
    "@prom-cms/vite": "^0.1.0",
    "@types/fs-extra": "9.0.13",
    "@types/inquirer": "^9.0.3",
    "tsc-alias": "^1.8.3",
    "tsconfig-paths": "3.12.0",
    "vitest": "^1.2.2"
  }
}
