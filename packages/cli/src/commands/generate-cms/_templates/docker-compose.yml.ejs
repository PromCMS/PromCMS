version: "3"

services:
  php_web:
    container_name: <%= project.name %>_web
    build:
      context: .
      dockerfile: Dockerfile
    depends_on:
      - mysql
    env_file:
      - .env
    volumes:
      - ./:/var/www/html
    user: 1000:1000
    ports:
      - 80:80
  mysql:
    container_name: <%= project.name %>_mysql
    image: mariadb:latest
    environment:
      MYSQL_ROOT_PASSWORD: "secret"
      MYSQL_USER: "secret"
      MYSQL_PASSWORD: "secret"
      MYSQL_DATABASE: "secret"
    volumes:
      - mysqldata:/var/lib/mysql
    ports:
      - 3306:3306
volumes:
  mysqldata: {}
