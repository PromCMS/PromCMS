<?php

use Psr\Http\Message\ResponseInterface;

function prepareJsonResponse(
  ResponseInterface $response,
  array $data,
  string $message = '',
  $code = false
) {
  return $response->getBody()->write(
    json_encode([
      'data' => $data,
      'message' => $message,
      'code' => $code,
    ]),
  );
}
