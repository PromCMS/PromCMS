{
  "extends": "../../default.tsconfig.json",
  "compilerOptions": {
    "rootDir": "src",
    "outDir": "dist",
    "noEmit": false,
    "target": "ESNEXT",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "isolatedModules": false
  },
  "include": [
    "src/**/*"
  ], 
  "exclude": [
    "node_modules",
    "dist"
  ]
}
