{
  "name": "prom-cms",
  "version": "0.0.0",
  "private": true,
  "description": "",
  "scripts": {
    "clean": "del **/dist/** && del **/.next/**",

    "dev": "turbo run dev --parallel",
    "dev:api": "turbo run dev --scope=\"@prom-cms/dev-api\" --parallel",
    
    "generate:dev": "yarn workspace @prom-cms/cli run generate:dev",
    "generate:cms": "yarn workspace @prom-cms/cli run generate:cms",
    "regenerate:dev": "yarn workspace @prom-cms/cli run regenerate:dev",

    "build:library": "turbo run build --scope=\"@prom-cms/cli\" --scope=\"@prom-cms/icons\" --scope=\"@prom-cms/shared\" --no-deps",
    "build:admin": "turbo run build --scope=\"@prom-cms/admin\" --no-deps",

    "version-packages": "changeset version && yarn prettier",
    "release": "yarn build:library && changeset publish"
  },
  "license": "ISC",
  "workspaces": [
    "./packages/*"
  ],
  "devDependencies": {
    "@prettier/plugin-php": "0.17.6",
    "prettier": "2.6.2",
    "@swc/core": "1.2.120",
    "@types/node": "16.11.10",
    "rimraf": "3.0.2",
    "turbo": "^1.1.10",
    "del-cli": "4.0.1",
    "typescript": "4.5.2"
  },
  "dependencies": {
    "@changesets/cli": "^2.22.0"
  }
}
